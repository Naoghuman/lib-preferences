    <name>Lib-Preferences</name>
    <inceptionYear>2014</inceptionYear>
    <url>https://github.com/Naoghuman/lib-preferences.git</url>
    
    <developers>
        <developer>
            <email>peter.rogge@yahoo.de</email>
            <id>Naoghuman</id>
